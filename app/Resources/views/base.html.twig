<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Scalable Graphics{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/app/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/default.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header class="clearfix">
            <nav class="navbar navbar-fixed-top">
                <div class="wrapper">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="{{ path('homepage') }}"><img style="margin-top: 2px; margin-bottom: -55px;" src="/bundles/app/logo.png" height="62px"></a>
                        </div>
                        <div class="collapse navbar-collapse" id="navbar">
                            {{ include('_right-navigation.html.twig') }}
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div id="langnav">
            Language:&nbsp;&nbsp;
            <a href="/en/">EN</a>
            &nbsp;
            <a href="/fr/">FR</a>
            &nbsp;
            <a href="/de/">DE</a>
        </div>

        {{ include('_messages.html.twig') }}

        <main>
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            <script src="{{ asset('bundles/app/vendor/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/app/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        {% endblock %}

    </body>
</html>
