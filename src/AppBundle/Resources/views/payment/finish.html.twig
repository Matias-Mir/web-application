{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                {% if accessDenied %}
                    <div class="alert alert-danger">
                        {{ "payment.finish.accessDenied_message"|trans }}
                    </div>
                {% else %}

                    {% if success %}
                        <div class="alert alert-success">
                            {{ "payment.finish.success_message"|trans({"%amount%": amount}) }}
                            <br>
                            {{ "payment.finish.current_balance"|trans({"%balance%": balance}) }}
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            {{ "payment.finish.cancel_message"|trans({"%amount%": amount}) }}
                            <br>
                            {{ "payment.finish.current_balance"|trans({"%balance%": balance}) }}
                        </div>
                    {% endif %}

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
