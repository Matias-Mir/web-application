    {{ parent() }}

    <script>
        var endpoints = [
            'https://dynamodb.us-west-1.amazonaws.com/',
            'https://dynamodb.us-east-1.amazonaws.com/',
            'https://dynamodb.eu-west-1.amazonaws.com/',
            'https://dynamodb.eu-central-1.amazonaws.com/'
        ];
        var pingImageContainerJqueryElement = jQuery('#pingImageContainer');

        var setEndpointInfoElementToWaiting = function (endpointIndex) {
            jQuery('#latencycheckendpoint-' + endpointIndex).html('Waiting...');
        };

        var setEndpointInfoElementToConnecting = function (endpointIndex) {
            jQuery('#latencycheckendpoint-' + endpointIndex).html('Connecting...');
        };

        var setEndpointInfoElementToPinging = function (endpointIndex) {
            jQuery('#latencycheckendpoint-' + endpointIndex).html('Pinging...');
        };

        var setEndpointInfoElementToResult = function (endpointIndex, pingResultInMs) {
            jQuery('#latencycheckendpoint-' + endpointIndex).removeClass('active')
            if (pingResultInMs < 30) {
                jQuery('#latencycheckendpoint-' + endpointIndex).addClass('success');
            } else if (pingResultInMs < 60) {
                jQuery('#latencycheckendpoint-' + endpointIndex).addClass('warning');
            } else {
                jQuery('#latencycheckendpoint-' + endpointIndex).addClass('danger');
            }

            jQuery('#latencycheckendpoint-' + endpointIndex).html(pingResultInMs + 'ms');
        };

        var startLatencyCheck = function (
            endpoints,
            pingImageContainerJqueryElement,
            setEndpointInfoElementToWaitingFunc,
            setEndpointInfoElementToConnectingFunc,
            setEndpointInfoElementToPingingFunc,
            setEndpointInfoElementToResultFunc
        ) {
            endpoints = endpoints.slice(0).reverse();

            var numberOfEndpoints = endpoints.length;

            for (var endpointIndex = 0; endpointIndex < endpoints.length; endpointIndex += 1) {
                console.log(endpointIndex);
                setEndpointInfoElementToWaitingFunc(endpointIndex);
            }

            window.setTimeout(
                function () {
                    doNextEndpoint();
                },
                1000
            );

            function currentTimeMillis() {
                return Date.now();
            }

            function pingEndpoint(endpoint, onComplete) {
                var randomString = Math.floor(Math.random()*0xFFFFFFFFFFFFFFFF).toString(36);
                var targetUrl = endpoint + 'nonExistantPathForPingingAgainst404?x=' + randomString;
                pingImageContainerJqueryElement.empty();
                pingImageContainerJqueryElement.html("<img id='httpLatencyCheckPingImage' style='display: none'>");
                var pingImage = $("#httpLatencyCheckPingImage");
                pingImage.on('error', onComplete);
                pingImage.attr('src', targetUrl);
            }

            function doNextEndpoint() {
                var endpointIndex = numberOfEndpoints - endpoints.length;
                var endpoint = endpoints.pop();
                if (endpoint) {
                    step1ConnectEndpoint(endpoint, endpointIndex);
                }
            }

            function step1ConnectEndpoint(endpoint, endpointIndex) {
                setEndpointInfoElementToConnectingFunc(endpointIndex);
                pingEndpoint(endpoint, function() { step2PingEndpoint(endpoint, endpointIndex); });
            }

            function step2PingEndpoint(endpoint, endpointIndex) {
                var startTime = currentTimeMillis();
                pingEndpoint(endpoint, function() { step3DisplayResult(startTime, endpoint, endpointIndex); });
            }

            function step3DisplayResult(startTime, endpoint, endpointIndex) {
                var endTime = currentTimeMillis();
                var elapsed = endTime - startTime;
                setEndpointInfoElementToResultFunc(endpointIndex, elapsed);
                doNextEndpoint();
            }

        };

        jQuery('document').ready(function () {
            jQuery(function() {

                window.setTimeout(
                    function () {
                        startLatencyCheck(
                            endpoints,
                            pingImageContainerJqueryElement,
                            setEndpointInfoElementToWaiting,
                            setEndpointInfoElementToConnecting,
                            setEndpointInfoElementToPinging,
                            setEndpointInfoElementToResult
                        );
                    },
                    5000 // Make sure everything else on the page is already loaded.
                );

                jQuery('#latencycheck-rerun-button').on('click', function () {
                    startLatencyCheck(
                        endpoints,
                        pingImageContainerJqueryElement,
                        setEndpointInfoElementToWaiting,
                        setEndpointInfoElementToConnecting,
                        setEndpointInfoElementToPinging,
                        setEndpointInfoElementToResult
                    );
                });

            });
        });
    </script>

