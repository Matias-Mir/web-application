            #demo-video {
                width: 750px;
                height: 421px;
            }
        }

        @media only screen and (max-width: 768px) {
            #splash {
                background-size: 140%;
                background-position-x: 10px;
            }

            .splash-text-box {
                margin-left: auto;
                margin-right: auto;
            }

            #splash-video {
                display: none;
            }

