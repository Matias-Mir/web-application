{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ "remoteDesktop.insufficientBalance.headline"|trans }}</h1>
                <div class="alert alert-warning">
                    <p>
                        <strong>
                            {{ "remoteDesktop.insufficientBalance.insufficient_balance_message_one"|trans }}
                        </strong>
                    </p>
                    <p>
                        {{
                        "remoteDesktop.insufficientBalance.insufficient_balance_message_two"
                        |trans(
                        {
                            "%hourlyCosts%": hourlyCosts|number_format(2, '.', ',')
                        }
                        )
                        }}
                        {% if currentBalance < 0.0 %}
                            <strong>-${{ currentBalanceAbsolute|number_format(2, '.', ',') }}</strong>.
                        {% else %}
                            <strong>${{ currentBalance|number_format(2, '.', ',') }}</strong>.
                        {% endif %}
                    </p>
                    <hr>
                    <a class="btn btn-primary" href="{{ path('accountmovements.new') }}">{{ "remoteDesktop.insufficientBalance.click_here_to_increase_your_balance"|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
