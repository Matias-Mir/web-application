{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ "accountMovement.index.headline"|trans }}</h1>
                <div class="well">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="min-width: 130px;">{{ "accountMovement.index.thead_occurred_at"|trans }}</th>
                                <th>{{ "accountMovement.index.thead_events"|trans }}</th>
                                <th>{{ "accountMovement.index.thead_balance"|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>

                            {% for eventblock in eventblocks %}

                                <tr>
                                    <td>{{ eventblock.occuredAt|date('F j, Y H:i', app.request.cookies.get('ubiqmachine_timezone')) }}</td>

                                    <td>
                                        {% for event in eventblock.events %}
                                            {{ event.description|trans({
                                                '%moneyValue%': event.moneyValue|localizedcurrency('USD'),
                                                '%stringValue%': event.stringValue,
                                                '%billableItemTypeTranslation%': ('accountMovement.index.billable_item_type_translation_' ~ event.billableItemType)|trans,
                                                '%remoteDesktopTitle%': event.remoteDesktopTitle
                                                })|replace({'[br]': '<br>'})|raw
                                            }}
                                            <br>
                                            <br>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if eventblock.accountBalance is defined %}
                                            {{ eventblock.accountBalance|localizedcurrency('USD') }}
                                        {% endif %}
                                    </td>
                                </tr>

                            {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
