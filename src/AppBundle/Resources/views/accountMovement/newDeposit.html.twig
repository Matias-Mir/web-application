{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ "accountMovement.newDeposit.form.headline"|trans }}</h1>
                <div class="well">

                    <div class="alert alert-info">
                        {{ "accountMovement.newDeposit.current_balance"|trans({"%balance%": balance|number_format(2, '.', ',')}) }}
                    </div>

                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>

                <a href="{{ path('remotedesktops.index') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    {{ "accountMovement.newDeposit.back_to_remotedesktops"|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
